@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - econest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@1,600&family=Roboto:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Logo Section -->
                <div class="navbar-logo-container">
                    <div class="eco-logo">
                        <div class="eco-e">
                            <span class="leaf-icon">🌿</span>
                            <span class="eco-text">E</span>
                        </div>
                        <span class="eco-text">CO</span>
                        <span class="nest-text">Nest</span>
                    </div>
                </div>

                <!-- Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Section -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="aboutus">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="contactus">Contact Us</a>
                        </li>

                        <li class="nav-item dropdown product-menu">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                Product
                            </a>
                            <ul class="product-menu" aria-labelledby="navbarDropdown">
                                <li><a class="product-item" asp-area="" asp-controller="Product" asp-action="product">Personal care</a></li>
                                <li><a class="product-item" asp-area="" asp-controller="Product" asp-action="product1">Plants</a></li>
                                <li><a class="product-item" asp-area="" asp-controller="Product" asp-action="product2">Household</a></li>
                                <li><a class="product-item" asp-area="" asp-controller="Product" asp-action="product3">Flower pot</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <!-- Icons Section (Cart & Profile) -->
                <div class="ml-auto d-flex align-items-center">
                    <ul class="navbar-nav icon-group">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="cart" asp-action="cartitem">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="order" asp-action="history" title="Order History">
                                <i class="fas fa-clipboard-list"></i>
                            </a>
                        </li>

                        <!-- If user is logged in -->
                        @if (Context.Request.Cookies["username"] != null)
                        {
                            <li class="nav-item dropdown profile-menu">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i> @Context.Request.Cookies["username"]
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-item-text">@Context.Request.Cookies["email"]</li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link text-dark">|</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light border-top pt-5 pb-4">
        <div class="container">
            <div class="row">

                <!-- Contact Info -->
                <div class="col-md-4 mb-4">
                    <h5>Contact Us</h5>
                    <p>Surat, Gujarat.</p>
                    <p>Phone: +1 (555) 123-4567</p>
                    <p>Email: econest@gmail.com</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="footer-link">Home</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="aboutus" class="footer-link">About Us</a></li>
                        <li><a asp-area="" asp-controller="product" asp-action="product" class="footer-link">Our Products</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="contactus" class="footer-link">Contact</a></li>
                    </ul>
                </div>

                <div class="col-md-5 mb-4">
                    <h5>Our Commitment to Sustainability</h5>
                    <p>
                        At ecoNest, we're dedicated to protecting our planet. From eco-packaging and plastic-free products to carbon-conscious delivery, every choice we make supports a greener tomorrow.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-leaf me-2 text-success"></i> Plastic-Free Packaging</li>
                        <li><i class="fas fa-recycle me-2 text-success"></i> 100% Recyclable Products</li>
                        <li><i class="fas fa-truck me-2 text-success"></i> Carbon-Neutral Delivery</li>
                        <li><i class="fas fa-hand-holding-heart me-2 text-success"></i> Ethical & Local Sourcing</li>
                    </ul>
                </div>

            </div>

            <hr>

            <div class="text-center small text-muted">
                &copy; 2025 econest. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
