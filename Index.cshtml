@model List<econest.Models.tblproduct>
@{
    ViewData["Title"] = "Home";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap Bundle JS (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<link href="~/css/product.css" rel="stylesheet" />
<link href="~/css/contact.css" rel="stylesheet" />

@* <div class="text-center my-5"> *@
@*     <h1 class="display-4">Welcome to EcoNest</h1> *@
@*     <p class="lead">Discover eco-friendly products that bring sustainability to your lifestyle.</p> *@
@* </div> *@

<!-- Carousel -->
<div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/uploads/slide1.jpg" class="d-block w-100 carousel-img" alt="Slide 1" height="500px">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>Eco-Friendly Living</h5>
                <p>Embrace a sustainable lifestyle with our green products.</p>
                <a href="/Home/aboutus" class="btn btn-success">About Us</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/uploads/slider2.jpg" class="d-block w-100 carousel-img" alt="Slide 2" height="500px">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>Nature-Inspired Products</h5>
                <p>Find items that care for both you and the planet.</p>
                <a href="/Home/aboutus" class="btn btn-success">About Us</a>
            </div>
        </div>
        <!-- Add more slides as needed -->
    </div>

    <!-- Navigation buttons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>


<!-- Our Products Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Our Products</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 product-card">
                    <img src="~/uploads/@item.image" class="card-img-top" alt="@item.pname" />
                    <div class="card-body">
                        <h5 class="card-title">@item.pname</h5>
                        <p class="card-text"><strong>Material:</strong> @item.material</p>
                        <p class="card-text"><strong>Description:</strong> @item.pdes</p>
                        <p class="card-text text-success"><strong>Price: ₹@item.price</strong></p>

                        <form method="post" asp-controller="cart" asp-action="AddToCart">
                            <div class="mb-2">
                                <input type="hidden" name="pid" value="@item.pid" id="@item.pid" />
                                <label for="quantity-@item.pid" class="form-label">Quantity:</label>
                                <input type="number" class="form-control" name="qty" id="qty" min="1" value="1" required />
                            </div>
                            <button type="submit" class="btn btn-success w-100">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<!-- Bootstrap JS Bundle (included at the bottom for better performance) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
